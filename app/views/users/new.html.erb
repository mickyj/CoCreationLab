
<div class="signup">
  <h1>Sign Up</h1>
  <div class="jumbotron">
    <%= simple_form_for(@user, :html => { :class => 'form-horizontal' }) do |f| %>
      <%= f.input :first_name%>
      <%= f.input :last_name %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
      <%= f.button :submit, class:"btn-primary" %>
      <%= submit_tag 'Cancel', :type => :reset, :class => "btn btn-danger" %>
    <% end %>
    </div>
  </div>







